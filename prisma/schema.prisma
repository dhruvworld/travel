generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Package {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  duration    Int
  location    String
  image       String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  offers      Offer[]
}

model Offer {
  id          String   @id @default(cuid())
  name        String
  description String
  discount    Float
  startDate   DateTime
  endDate     DateTime
  isActive    Boolean  @default(true)
  package     Package  @relation(fields: [packageId], references: [id])
  packageId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Photo {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageUrl    String
  location    String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Image {
  id        String   @id @default(cuid())
  url       String
  publicId  String
  category  String   // e.g., 'gallery', 'destinations', 'hero'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model customTour {
  id            String   @id @default(cuid())
  fullName      String
  email         String
  phone         String
  destinations  String
  numTravelers  Int
  travelOnly    Boolean  @default(false)
  preferences   String?
  startDate     DateTime
  endDate       DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum Role {
  ADMIN
  SUPER_ADMIN
}
